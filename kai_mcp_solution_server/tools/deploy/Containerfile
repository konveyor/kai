FROM python:3.13-slim

WORKDIR /app
RUN mkdir -p /data/
ENV DB_PATH=/data/kai_solutions.db

RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \

    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv for dependency management
RUN pip install --no-cache-dir uv

# Copy project files
COPY src/ src/
COPY pyproject.toml .
COPY README.md .

ENV UV_WORKSPACE=src

# Install Python dependencies using uv
RUN uv sync


# Create a non-root user
RUN useradd -m mcp
# Set permissions for the data directory
RUN chown -R mcp:mcp /data

#allow access to write logs (this is a hack)
RUN chown -R mcp:mcp /app
USER mcp

# Default to SSE transport on port 8000
EXPOSE 8000

CMD ["uv", "run", "python", "-m", "kai_mcp_solution_server", "--transport", "sse", "--host", "0.0.0.0", "--port", "8000"]
